<%= provide(:title, "Categories info") %>

<div class="row">
  <div class="col-md-6 col-md-offset-6 text-right">
    <%= link_to "Create", new_category_path, class: "btn btn-primary #{admin_disabled_class}" %>
    <%= link_to "Edit", edit_category_path(@category.id), class: "btn btn-success #{admin_disabled_class}" %>
    <%= link_to "Delete", category_path(@category.id), method: :delete, class: "btn btn-danger #{admin_disabled_class}" %>

  </div>
</div>

<br/>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= @category.title %>
      </div>
      <div class="panel-body">
        <table class="table">
          <tr>
            <td>
              Title:
            </td>
            <td>
              <%= @category.title %>
            </td>
          </tr>
          <tr>
            <td>
              Badge:
            </td>
            <td>
              <span class="label label-category label-<%= Category.colors[@category.color] %>">
            <%= @category.title %>
          </span>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">Books related</div>
      <div class="panel-body">
        <table class="table table-bordered">
          <tr>
            <td>Book name</td>
          </tr>
          <% @category.books.each do |book| %>
            <tr>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
            </tr>
          <% end %>

        </table>
      </div>
    </div>
  </div>
</div>